model = 'sagyoukubun'

$('form#new_' + model).clear_previous_errors()

<% if @sagyoukubun.errors.any? %>
  $('form#new_' + model).render_form_errors(model, '<%=@sagyoukubun.errors.messages.to_json.html_safe%>')
<% else %>
  $('#sagyoukubun-new-modal').modal('hide');
  $('#sagyoukubunmaster').DataTable().row.add( [
    "<%=@sagyoukubun.id%>",
    "<%=@sagyoukubun.作業区分%>",
    "<%=@sagyoukubun.作業区分名称%>",
    "<%=escape_javascript link_to '', @sagyoukubun, method: :delete, data: { confirm: '削除して宜しいですか？' } , class: 'glyphicon glyphicon-remove text-danger remove-underline'%>"
  ]).draw( false );
<% end %>
