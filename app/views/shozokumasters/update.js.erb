model = 'shozokumaster'

$('form#edit_' + model).clear_previous_errors()

<% if @shozokumaster.errors.any? %>
  $('form#edit_' + model).render_form_errors(model, '<%=@shozokumaster.errors.messages.to_json.html_safe%>')
<% else %>
  $('#shozoku-edit-modal').modal('hide');
  $("#shozokumaster").DataTable().row('tr.selected').remove();
  $('#shozokumaster').DataTable().row.add([
    "<%=@shozokumaster.所属コード%>",
    "<%=@shozokumaster.所属名%>",
    "<%=escape_javascript link_to_delete(@shozokumaster)%>"
  ]).node().id = 'shozokumaster_<%= @shozokumaster.id %>';
  $('#shozokumaster').DataTable().draw( false );
  $('#shozokumaster').DataTable().buttons('#edit, #destroy').nodes().addClass('disabled');
<% end %>
