model = 'kaishamaster'

$('form#new_' + model).clear_previous_errors()

<% if @kaishamaster.errors.any? %>
  $('form#new_' + model).render_form_errors(model, '<%=@kaishamaster.errors.messages.to_json.html_safe%>')
<% else %>
  $('#kaisha-new-modal').modal('hide');
  $('#kaishamaster').DataTable().row.add( [
    "<%=@kaishamaster.会社コード%>","<%=@kaishamaster.会社名%>","<%=@kaishamaster.備考%>","<%=escape_javascript link_to_delete(@kaishamaster)%>"
  ]).node().id = 'kaishamaster_<%= @kaishamaster.id %>';
  $('#kaishamaster').DataTable().draw( false );
<% end %>
