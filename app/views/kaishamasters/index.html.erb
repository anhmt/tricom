<%= javascript_include_tag 'kaishamasters/index' %>
<%provide(:title, (t 'title.kaishamaster'))%>
<ol class="breadcrumb">
  <li><%= link_to 'メニュー', main_path %></li>
  <li class="active">会社マスタ</li>
</ol>

<table id="kaishamaster" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>会社コード</th>
      <th>会社名</th>
      <th>備考</th>
    </tr>
  </thead>

  <tbody>
    <% @kaishamasters.each do |kaishamaster| %>
      <tr id="kaisha-<%= kaishamaster.id %>">
        <td><%= kaishamaster.id %></td>
        <td><%= kaishamaster.name %></td>
        <td><%= kaishamaster.note %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if can? :update, @kaishamasters %>
  <%=render 'share/import_csv_modal',import_path: import_kaishamasters_path%>
<% end %>
<%= render 'new' %>
<%= render 'edit' %>