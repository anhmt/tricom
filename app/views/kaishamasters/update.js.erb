model = 'kaishamaster'

$('form#edit_' + model).clear_previous_errors()

<% if @kaishamaster.errors.any? %>
  $('form#edit_' + model).render_form_errors(model, '<%=@kaishamaster.errors.messages.to_json.html_safe%>')
<% else %>
  $('#kaisha-edit-modal').modal('hide');
  $("#kaishamaster").DataTable().row('tr.selected').remove();
  $('#kaishamaster').DataTable().row.add([
    "<%=@kaishamaster.会社コード%>","<%=@kaishamaster.会社名%>","<%=@kaishamaster.備考%>"
    ]).draw( false );
  $('#kaishamaster').DataTable().buttons('#edit, #destroy').nodes().addClass('disabled');
<% end %>
