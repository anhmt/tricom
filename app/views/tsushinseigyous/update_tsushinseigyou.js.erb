model = 'tsushinseigyou'

$('form#edit_' + model).clear_previous_errors()

<% if @tsushinseigyou.errors.any? %>
  $('form#edit_' + model).render_form_errors(model, '<%=@tsushinseigyou.errors.messages.to_json.html_safe%>')
<% else %>
  $('#tsushinseigyou-edit-modal').modal('hide');
  $("#tsushinseigyoumaster").DataTable().row('tr.selected').remove();
  $('#tsushinseigyoumaster').DataTable().row.add([
    "<%=@tsushinseigyou.id%>",
    "<%=@tsushinseigyou.社員番号%>",
    "<%=@tsushinseigyou.メール%>",
    "<%=@tsushinseigyou.送信許可区分 == '0' ? '不可' : '許可'%>"
    ]).draw( false );
  $('#tsushinseigyoumaster').DataTable().buttons('#edit, #destroy').nodes().addClass('disabled');
<% end %>
