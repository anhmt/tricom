= provide(:title, (t 'title.rorumenba'))
%ol.breadcrumb
  %li= link_to (t 'title.menu'), main_path
  %li= link_to 'ロールメンバ', rorumenbas_path
  %li.active 編集

= simple_form_for(@rorumenba) do |f|
  .col-md-5.col-xs-5.col-sm-5.col-lg-5.col-md-offset-1.col-xs-offset-1.col-sm-offset-1.col-lg-offset-1
    = f.input :ロールコード, :readonly => true
    = f.input :社員番号, :readonly => true
    = f.input :氏名, :readonly => true, :input_html => { :value => @shainna }
    = f.input :ロール内序列
    = f.button :submit, class: 'btn btn-primary'
