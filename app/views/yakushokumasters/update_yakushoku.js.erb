model = 'yakushokumaster'

$('form#edit_' + model).clear_previous_errors()

<% if @yakushokumaster.errors.any? %>
  $('form#edit_' + model).render_form_errors(model, '<%=@yakushokumaster.errors.messages.to_json.html_safe%>')
<% else %>
  $('#yakushoku-edit-modal').modal('hide');
  $("#yakushokumaster").DataTable().row('tr.selected').remove();
  $('#yakushokumaster').DataTable().row.add([
    "<%=@yakushokumaster.役職コード%>",
    "<%=@yakushokumaster.役職名%>"
    ]).draw( false );
  $('#yakushokumaster').DataTable().buttons('#edit, #destroy').nodes().addClass('disabled');
<% end %>
