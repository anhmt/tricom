.modal#setsubi-new-modal{tabindex:-1, role: :dialog, 'aria-labelledby'=>"myModalLabel", 'aria-hidden'=>"true"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{type: :button, 'data-dismiss'=>"modal", 'aria-hidden'=>"true"} &times;
        %h4.modal-title#myModalLabel= (t 'title.new')
      .modal-body
        = simple_form_for :setsubi, url: setsubis_path, method: :post, :remote => true, html: { id: 'new_setsubi', role: :form, 'data-model' => 'setsubi'} do |f|
          = f.input :設備コード do
            = f.input_field :設備コード, class: 'form-control'
            .span.help-block
          = f.input "設備名" do
            = f.input_field :設備名, class: 'form-control'
            .span.help-block
          = f.input :備考,label: "備考"
          = f.button :submit, class: 'btn btn-primary'