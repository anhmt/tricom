var table = $('#jobuchiwake_table').DataTable();
table.clear().draw();
<% if @jobuchiwakes.any? %>
  <% @jobuchiwakes.each do |jobuchiwake| %>
    table.row.add( [
      "<%= jobuchiwake.ジョブ内訳番号%>",
      "<%= jobuchiwake.jushinnichiji %>",
      "<%= jobuchiwake.件名 %>",
      "<%= jobuchiwake.jushinshubetsu %>"
      ] ).draw(false);
  <% end %>
  $('.row#uchiwake').show();
<% else %>
  $('.row#uchiwake').hide();
<% end %>