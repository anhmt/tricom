<%= javascript_include_tag 'users/index' %>
<%provide(:title, (t 'title.user.tantousha'))%>
<ol class="breadcrumb">
  <li><%= link_to 'メニュー', main_path %></li>
  <!--<li><%# link_to '社員マスタ', shainmasters_url %></li>-->
  <!-- <li><a href="#">基準情報</a></li> -->
  <!-- <li><a href="#">セキュリティ管理</a></li> -->
  <li class="active">担当者マスタ</li>
</ol>

<table id="user" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>担当者コード</th>
      <th>担当者名称</th>
      <th>アドミン</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr id="user_<%= user.id %>">
        <td><%= user.担当者コード %></td>
        <td><%= user.担当者名称 %></td>
        <td>
          <% if user.admin? %>
            <span class="glyphicon glyphicon-ok text-success"></span>
          <% end %>
        </td>
        <td><%= link_to_edit(edit_user_path(user)) if current_user.admin? || current_user.supervisor? %></td>
        <td><%= link_to_delete(user) if current_user.admin? || current_user.supervisor? %></td>
      </tr>
  <% end %>
  </tbody>
</table>
